<UserControl x:Class="MyCustomControlsWPF.ButtonChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyCustomControlsWPF"
             x:Name="buttonChatRoot"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120">
    <Border Background="#fdc401" CornerRadius="8">
        <Button Name="SendButton" Content="{Binding TextContent, ElementName=buttonChatRoot}"
            Margin="10" BorderBrush="#fdc401" Background="#fdc401" Foreground="#FF387752"
            Padding="20,7" FontFamily="Ink Free" FontWeight="Bold" 
            FontSize="{Binding SizeFont, ElementName=buttonChatRoot}"
            HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
            Click="Button_Click"/>
    </Border>
</UserControl>
