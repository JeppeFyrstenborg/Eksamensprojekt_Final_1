@model Eksamensprojekt_Final_1_Web_App.ViewModels.UserChatViewModel
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    <h6>Chatnavn</h6>
                </th>
                <th>
                    <h6>Oprettet dato</h6>
                </th>
                <th>
                    <h6></h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Chats)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChatName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        <button class="btn btn-primary view-messages-btn" data-chatid="@item.ChatId" data-userid="@Model.UserId">Vis beskeder</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>