@model List<DTO.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Users{
    <h2 class="text-center mt-5">Brugere</h2>
    <p>
        <a href="@Url.Action("GetUser")" class="btn btn-success">Ny Bruger</a>
    </p>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    <h5>Id</h5>
                </th>
                <th>
                    <h5>Brugernavn</h5>
                </th>
                <th>
                    <h5>Email</h5>
                </th>
                <th>
                    <h5></h5>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                using (Html.BeginForm("deleteuser", "User", new { id = item.UserId }, FormMethod.Post))
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a href="@Url.Action("GetUser", new { id = item.UserId })" class="btn btn-primary">Rediger</a>
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Ønsker du at slette brugeren: @item.Username?')">Delete</button>

                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
}
